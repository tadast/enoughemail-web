= form_for @filter_rule do |f|
  - if @filter_rule.errors.any?
    #error_explanation.bg-red-100.rounded-lg.py-5.px-6.mb-4.text-base.text-red-700.mb-3
      %h2.text-lg= "#{pluralize(@filter_rule.errors.count, "error")} prohibited this filter_rule from being saved:"
      %ul
        - @filter_rule.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :email_pattern
    = f.text_field :email_pattern
  .actions
    = f.submit 'Save'
